<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Fragment.ViajeFragment">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Mis Viajes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnPublicar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publicar ( + )"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtTitulo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Detalles de mis viajes"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtViaje"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="#"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="Fecha"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtOrigen"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1.8"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="Origen"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtDestino"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1.8"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="Destino"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtCantidad"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="Cantidad"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtTarifa"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1.5"
            android:background="@drawable/textview_style2"
            android:gravity="center"
            android:text="Tarifa"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/listViaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>